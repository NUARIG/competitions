%h5
  Edit Permission for:
.grid-x.grid-padding-x
  .cell.small-12.medium-3
    = full_name(@user)
    %br
    .small= @user.email
  .cell.small-12.medium-8
    = f.select :role, grant_permission_role_select_options, include_blank: 'Please select role'

= render partial: 'grant_permissions/checkboxes', locals: { f: f }

.grid-x.grid-padding-x
  .cell.small-12.actions
    = f.submit 'Update', class: 'button'
    = link_to 'Cancel', grant_grant_permissions_path(grant), class: 'button secondary'



- content_for(:page_title, "Add User Permissions for #{@grant.name}")

%h1
  = @grant.name

= render 'shared/grant_state', { grant: @grant }

= render 'shared/grant_edit_tabbed_menu', { grant: @grant }

.tabs-panel.is-active
  %h2
    = yield(:page_title)

  %p
    = link_to 'Back to Permissions', grant_grant_permissions_path

.grid-x
  .cell
    = form_with model: [@grant, @grant_permission], local: true do |f|
      = render 'new_form', f: f, grant: @grant, users: @users

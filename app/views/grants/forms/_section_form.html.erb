<fieldset class="form_builder_section_fieldset">
  <legend>Section <%= section.link_to_remove "Delete", class: "button tiny btn-pill warning" if has_edit_permission %></legend>
  <table class="section_table table table-condensed table-striped">
    <%= form_table_row section, :title do |attr| %>
    <%= section.text_field attr %>
    <% end %>

    <%= form_table_row section, :display_order do |attr| %>
    <%= section.text_field attr, size: 3 %>
    <% end %>

    <%= form_table_row section, :repeatable do |attr| %>
    <%= section.check_box attr, class: 'form_builder_section_repeatable' %>
    <% end %>

    <%#= form_table_row section, :allow_follow_up do |attr| %>
    <%#= section.check_box attr, class: 'form_builder_section_allow_follow_up' %>
    <%# end %>
  </table>

  <%= section.fields_for :questions, section.object.questions.sort_by{|q|q.display_order || 0} do |fff| %>
  <%= render partial: 'question_form', locals: {question: fff, has_edit_permission: has_edit_permission}%>
  <% end %>

  <% if has_edit_permission %>
    <%= section.link_to_add "Add Question", :questions, class: "button btn-pill small success" %>
  <% end %>
</fieldset>

<div data-form_builder_upload>
  <% if has_saved_file %>
    <%= link_to document.filename.to_s, rails_blob_path(document, disposition: 'attachment'), { :'data-form_builder_upload_file_link' => ''} %>
    <%#= link_to link_text, link_location, {:'data-form_builder_upload_file_link' => ''} %>
  <% end %>

  <%= f.file_field :document, disabled: disabled %>

  <%- if !disabled %>
      <a data-form_builder_upload_clear style="font-size: 80%" class="button tiny btn-pill warning" href="#">clear</a>
    <%= f.hidden_field remove_document, {:'data-form_builder_remove_document' => ''} %>
  <% end %>
</div>

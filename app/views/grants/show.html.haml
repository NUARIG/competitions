- content_for(:page_title, "#{@grant.name}")

%h1
  = @grant.name
  %small
    = @grant.organization.name

.grid-x.grid-margin-x
  %aside.small-12.medium-3.cell
    .card#grant-dates
      %h4.card-divider
        Dates
      .card-section
        %dl
          %dt
            Publish Date:
          %dd
            = @grant.publish_date
          %dt
            Submission Open Date:
          %dd
            = @grant.submission_open_date
          %dt.secondary
            Submission Close Date:
          %dd
            = @grant.submission_close_date
  %main.small-12.medium-9.cell
    %h4
      RFA
    = @grant.rfa.html_safe

    %hr

    %ul.menu.simple#user-links
      %li
        = link_to 'Apply', new_grant_submission_path(@grant), class: 'submissions'
      %li
        = link_to 'View All Grants', root_path

    %ul.menu.simple#admin-links
      %li
        = link_to 'Edit', edit_grant_path(@grant), id: "grant-#{@grant.id}-edit" if policy(@grant).edit?
      %li
        = link_to 'View Submissions', grant_submissions_path(@grant), class: 'submissions' if policy(@grant).grant_viewer_access?


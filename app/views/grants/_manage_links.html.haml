%td.manage{ data: { grant: { id: grant.id } } }
  %ul.dropdown.menu{ data: { "dropdown-menu": '' } }
    %li.text
      = link_to 'Manage', '#'
      %ul.menu
        %li= link_to 'Edit', edit_grant_path(grant) if policy(grant).edit?
        %li= link_to 'Duplicate', new_grant_duplicate_path(grant) if policy(grant).duplicate?
        %li= link_to 'Submission Form', edit_grant_form_path(grant, grant.form)
        %li= link_to 'Review Criteria', criteria_grant_path(grant)
        %li= link_to 'Submissions', grant_submissions_path(grant)
        %li= link_to 'Reviewers', grant_reviewers_path(grant)
        %li= link_to 'Reviews', grant_reviews_path(grant)
        %li= link_to 'Delete', grant, method: :delete, data: { confirm: 'Are you sure you want to delete this grant entirely?' } if policy(grant).destroy? && grant_can_be_deleted?(grant)

- content_for(:page_title, "#{@grant.name}")

.grid-x
  .cell
    %h1= "Editing #{@grant.name}"

.grid-x
  .cell
  = form_with model: @grant, local: true do |f|
    = render 'form', f: f, grant: @grant, questions: @questions

  .cell
    = link_to 'Show', @grant, id: "grant-#{@grant.id}"
    |
    = link_to 'Back', grants_path

%h1
  = grant.name

= @role

#grant-state
  %strong
    Current Publish Status:
  = grant.state.capitalize
  = render 'grants/state/form', { grant: grant } unless @current_user_role == 'viewer'

%ul.tabs#grant-info{ class: "grant-edit grant-#{grant.id}-edit" }
  - {'View' => grant_path(grant),                                                                        |
     'Edit' => edit_grant_path(grant),                                                                   |
     'Submission Form' => edit_grant_form_path(grant, grant.form), |
     'Permissions' => grant_grant_permissions_path(grant),                                               |
     'Submissions' => grant_submissions_path(grant),                                                     |
     'Duplicate' => new_grant_duplicate_path(grant) }.each do |tab, path|
    %li.tabs-title{ class: [request.path == path && 'is-active'] }
      = link_to tab, path

.tabs-content{ data: { tabs: { content: 'grant-info' } } }

- content_for(:page_title, "Submissions - #{@grant.name}")

= render 'shared/grant_edit_tabbed_menu', { grant: @grant }

.tabs-panel.is-active
  %h3
    Submissions

  - unless @submissions.present?
    %p
      There are no submissions to this grant.
  - else
    %table.table.table-condensed
      %thead
        %tr
          %th Applicant
          %th Title
          %th Submitted On
          %th
      %tbody
        - @submissions.sort_by(&:id).sort_by(&:date_order).each do |submission|
          %tr
            %td
              = link_to submission.applicant.name, grant_submission_path(@grant, submission)
            %td
              = link_to submission.title, grant_submission_path(@grant, submission)
            %td
              = submission.created_at
            %td
              = link_to 'Reviews', grant_submission_reviews_path(@grant, submission), class: 'button clear'
              = link_to 'Edit', edit_grant_submission_path(@grant, submission), class: 'button clear'
              = link_to 'Delete', grant_submission_path(@grant, submission), method: :delete, data: { confirm: 'Are you sure?'}, class: 'button clear alert', confirm: 'Are you sure?'

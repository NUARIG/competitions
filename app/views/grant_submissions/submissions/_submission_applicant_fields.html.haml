- disable_fields = !policy(@submission).update?
/ .grid-x
/   %ul.menu
/     %li
/       Add Applicant by Email Address
/       %div{ style: 'display: inline-block' }
/         = form_for :grant_submission_submission_applicant, url: grant_submission_applicant_path(@submission) do |f|
/           .input-group
/             = f.email_field :applicant_email, placeholder: 'Email', class: 'input-group-field'
/             .input-group-button
/               = f.submit 'Look Up', class: 'button small'
.nested-fields
  .field
    %table
      %thead
        %tr
          %th Name
          %th Email
          %th
      %tbody
        - @submission.submission_applicants.each do |sub_app|
        - applicant = sub_app.applicant
          %tr
            %td= full_name(applicant)
            %td= applicant.email
            %td= button_to "Remove", grant_submission_submission_applicant_path(@grant, @submission, sub_app), method: :delete, class: 'button tiny hollow alert remove', data: { confirm: "Are you sure you want to remove #{full_name(applicant)} from this submission?" }


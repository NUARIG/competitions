%tr{id: "user-#{user.id}", class: 'user'}
  %td
    = link_to sortable_full_name(user), edit_user_path(user)
  %td
    = user.email
  %td.small
    = user.saml_user? ? 'SAML User' : 'Registered User'
  %td.small
    = time_tag(datetime: user.created_at.to_date)
  %td.small
    = time_ago_tag(datetime: user.current_sign_in_at) if user.current_sign_in_at.present?
  %td.small
    = link_to 'Edit', edit_user_path(user)

%div.row.align-top.turbo-row{ id: dom_id(banner)}
  %div.columns.small-12.medium-6
    = truncate(strip_tags(banner.body), length: 64, separator: ' ')
  %div.columns.small-12.medium-2
    = banner.visible.to_s.capitalize
  %div.columns.small-12.medium-2
    = time_tag(banner.created_at, banner.created_at.to_formatted_s(:default))
  %div.columns.small-6.medium-1
    = link_to 'Edit', edit_banner_path(banner)
  %div.columns.small-6.medium-1
    = link_to 'Delete', banner, method: :delete, data: { confirm: 'Are you sure you want to delete this banner entirely? To take it down without deleting it, uncheck the Visible box on the edit page.' }
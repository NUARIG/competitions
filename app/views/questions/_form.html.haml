= form_for @question do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :field
    = f.text_field :field
  .field
    = f.label :grant
    = f.text_field :grant
  .field
    = f.label :name
    = f.text_area :name
  .field
    = f.label :help_text
    = f.text_area :help_text
  .field
    = f.label :placeholder_text
    = f.text_area :placeholder_text
  .field
    = f.label :required
    = f.check_box :required
  .actions
    = f.submit 'Save'

.card{ id: "grant_#{grant.id}" }
  .card-section.grant-name
    %h4.name{ class: grant.name_length_class }
      = link_to truncate(grant.name, length: 150), grant_path(grant)
  .card-section.grant-dates
    .dates
      .date
        %strong
          Announced:
        = time_tag(grant.publish_date.beginning_of_day, grant.publish_date.beginning_of_day.to_formatted_s(:date_only), class: 'publish-date')
      .date
        %strong
          Submission Period:
        .submission-period
          = submission_period(grant: grant)
  .card-divider.grant-links
    %ul.menu
      = grant.show_menu_link
      = grant.edit_menu_link
